/* 文章场景相关 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}
/* 个人信息卡片 */
.profile-card {
  background: linear-gradient(135deg, #7d79f4 0%, #9d99ff 100%);
  padding: 40rpx 0;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}
.profile-card .avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.profile-card .avatar-container .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}
.profile-card .avatar-container .username {
  color: white;
  font-size: 36rpx;
  font-weight: 500;
  margin-top: 20rpx;
}
.profile-card .stats {
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx;
}
.profile-card .stats .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.profile-card .stats .stat-item .stat-value {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}
.profile-card .stats .stat-item .stat-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 10rpx;
}
/* 信息容器 */
.info-container {
  background-color: white;
  margin: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.info-container .section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.info-container .info-list {
  padding: 20rpx 0;
}
.info-container .info-list .info-item {
  display: flex;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}
.info-container .info-list .info-item:last-child {
  border-bottom: none;
}
.info-container .info-list .info-item .item-label {
  font-size: 28rpx;
  color: #666;
  width: 240rpx;
}
.info-container .info-list .info-item .item-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
}
/* 操作按钮 */
.action-container {
  margin: 40rpx 20rpx;
}
.action-container .edit-btn {
  background: linear-gradient(135deg, #7d79f4 0%, #9d99ff 100%);
  color: white;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  box-shadow: 0 6rpx 16rpx rgba(125, 121, 244, 0.3);
}
.action-container .edit-btn .btn-text {
  font-weight: 500;
}
/* 快捷操作 */
.quick-actions {
  display: flex;
  margin: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.quick-actions .action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}
.quick-actions .action-item .action-icon {
  font-size: 48rpx;
  color: #7d79f4;
  margin-bottom: 16rpx;
}
.quick-actions .action-item .action-text {
  font-size: 28rpx;
  color: #333;
}
