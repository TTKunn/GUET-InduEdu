/* 文章场景相关 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}
/* 头部导航 */
.header-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.3);
}
.header-nav .back-btn {
  font-size: 36rpx;
  color: white;
  width: 40rpx;
}
.header-nav .nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: white;
  font-weight: 500;
}
/* 头部图片 */
.banner-container {
  position: relative;
  overflow: hidden;
}
.banner-container .club-banner {
  width: 100%;
  height: 500rpx;
  display: block;
}
.banner-container .banner-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
}
.banner-container .club-basic-info {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
}
.banner-container .club-basic-info .club-name {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  display: block;
  margin-bottom: 15rpx;
}
.banner-container .club-basic-info .info-tags {
  display: flex;
  flex-wrap: wrap;
}
.banner-container .club-basic-info .info-tags .tag-item {
  background-color: rgba(0, 0, 0, 0.4);
  color: white;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}
/* 数据统计 */
.stats-container {
  display: flex;
  background-color: white;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}
.stats-container .stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.stats-container .stat-item .stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #7d79f4;
  margin-bottom: 10rpx;
}
.stats-container .stat-item .stat-label {
  font-size: 24rpx;
  color: #666;
}
/* 详情容器 */
.detail-container {
  padding: 20rpx;
}
.section {
  background-color: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  display: block;
}
.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
/* 信息列表 */
.info-list .info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.info-list .info-item:last-child {
  margin-bottom: 0;
}
.info-list .info-item .item-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}
.info-list .info-item .item-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
/* 成员分布图表 */
.distribution-chart {
  display: flex;
  justify-content: space-between;
  height: 240rpx;
}
.distribution-chart .distribution-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10rpx;
}
.distribution-chart .distribution-item .bar-container {
  width: 100%;
  height: 180rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
}
.distribution-chart .distribution-item .bar-container .bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #7d79f4;
  transition: height 0.5s ease;
}
.distribution-chart .distribution-item .bar-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 15rpx;
  text-align: center;
}
.distribution-chart .distribution-item .bar-value {
  font-size: 24rpx;
  color: #7d79f4;
  margin-top: 5rpx;
}
/* 活动列表 */
.activities-list .activity-item {
  display: flex;
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.activities-list .activity-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}
.activities-list .activity-item .activity-cover {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.activities-list .activity-item .activity-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.activities-list .activity-item .activity-info .activity-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.activities-list .activity-item .activity-info .activity-date {
  font-size: 24rpx;
  color: #999;
}
/* 操作按钮 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: white;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}
.action-bar .action-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.7;
  transition: opacity 0.3s;
}
.action-bar .action-button:not(:disabled) {
  opacity: 1;
  cursor: pointer;
}
.action-bar .action-button .btn-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
}
.action-bar .join-button {
  background: linear-gradient(135deg, #7d79f4 0%, #9d99ff 100%);
}
.action-bar .quit-button {
  background: linear-gradient(135deg, #FF3B30 0%, #FF6B60 100%);
}
.action-bar .manage-button {
  background: linear-gradient(135deg, #34C759 0%, #5AC8FA 100%);
}
/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.loading-mask .loading-container {
  background-color: white;
  padding: 40rpx 60rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.loading-mask .loading-container .loading-animation {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #7d79f4;
  border-radius: 50%;
  border-top-color: transparent;
  -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}
.loading-mask .loading-container .loading-text {
  font-size: 28rpx;
  color: #333;
}
/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  padding: 20rpx;
}
.error-container .error-icon {
  font-size: 60rpx;
  color: #FF3B30;
  margin-bottom: 20rpx;
}
.error-container .error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}
.error-container .retry-button {
  background-color: #7d79f4;
  color: white;
  font-size: 28rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
}
/* 动画 */
@-webkit-keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
