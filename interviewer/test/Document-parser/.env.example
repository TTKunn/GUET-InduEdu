# PDF_ANALYSER 环境变量配置示例
# 复制此文件为 .env 并填入实际配置值

# ==================== API配置 ====================
# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://xiaoai.plus/v1

# DeepSeek API配置（可选）
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 智谱AI API配置
ZHIPUAI_API_KEY=your_zhipuai_api_key_here

# ==================== Milvus数据库配置 ====================
# Milvus连接地址
MILVUS_URI=http://localhost:19530
# Milvus认证token（如果需要）
MILVUS_TOKEN=
# 集合名称
COLLECTION_NAME=pdf_documents

# ==================== 嵌入模型配置 ====================
# 默认嵌入模型类型 (bge/openai/zhipuai)
DEFAULT_EMBEDDING_MODEL=zhipuai

# BGE嵌入模型配置
BGE_MODEL_NAME=BAAI/bge-small-zh-v1.5
BGE_DEVICE=cpu
BGE_NORMALIZE_EMBEDDINGS=True

# 智谱AI嵌入模型配置
ZHIPUAI_EMBEDDING_MODEL=embedding-2

# ==================== 文档处理配置 ====================
# PDF分块大小
PDF_CHUNK_SIZE=1000
# 分块重叠大小
PDF_CHUNK_OVERLAP=200
# 文件编码
PDF_ENCODING=utf-8

# ==================== 路径配置 ====================
# 数据目录
DATA_DIR=./data
# 输出目录
OUTPUT_DIR=./output
# 日志目录
LOG_DIR=./logs

# ==================== 日志配置 ====================
# 日志级别 (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO
# 日志格式 (simple/detailed)
LOG_FORMAT=detailed

# ==================== 性能配置 ====================
# 批处理大小
BATCH_SIZE=20
# 最大工作线程数
MAX_WORKERS=4
