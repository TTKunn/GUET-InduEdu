# ==================== 数据库配置 ====================
# MongoDB连接URI
MONGO_URI=mongodb://localhost:27017
# 如果使用认证：mongodb://username:password@localhost:27017/database_name?authSource=admin

# 数据库名称
MONGO_DB=interview_analysis

# 集合名称
MONGO_COLLECTION=candidate_profiles

# 连接超时设置（毫秒）
MONGO_CONNECT_TIMEOUT=5000
MONGO_SERVER_SELECTION_TIMEOUT=5000

# ==================== 大模型配置 ====================
# 智谱AI配置
ZHIPUAI_API_KEY=your_zhipuai_api_key_here
ZHIPUAI_MODEL=glm-4

# OpenAI配置（备用）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# 默认LLM提供商 (zhipuai 或 openai)
DEFAULT_LLM_PROVIDER=zhipuai

# LLM调用参数
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000
LLM_TIMEOUT=60

# ==================== PDF解析配置 ====================
# PDF分块参数
PDF_CHUNK_SIZE=1000
PDF_CHUNK_OVERLAP=200

# 文件大小限制（MB）
PDF_MAX_FILE_SIZE=10

# Document-parser服务URL
DOCUMENT_PARSER_URL=http://localhost:8002

# ==================== 服务配置 ====================
# API服务配置
API_HOST=0.0.0.0
API_PORT=8004
API_WORKERS=1

# 跨域配置
CORS_ORIGINS=*

# ==================== 日志配置 ====================
# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=logs/analysis_service.log

# ==================== 安全配置 ====================
# 是否启用认证
ENABLE_AUTH=false

# 请求限制
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10
